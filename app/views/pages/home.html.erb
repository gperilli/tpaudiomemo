<%= render 'shared/header' %>

<!-- Home Top -->
<section class="column" id="section-hometop" data-controller="homepage">
  <div class="container">
    <div id="home-top">
      <div id="home-top-inner">
        <div class="top-section-background-fade"></div>
        <div id="home-top-left">
          <h1 class="h1">TP Audio Memos</h1>
          <p class="text-xl">Live life as if you were Dale Cooper from Twin Peaks.</p>
          <p class="text-xl">Try Twin Peaks Audio Memos.</p>
          <%= link_to 'Try for Free', new_user_registration_path, class: "sign-up-button" %>
          <div id="home-top-left-icons">

            <div>
              <%= render 'shared/icons/icons_audio' %>
              <span >Audio <br>recordings</span>
            </div>
            <div>
              <%= render 'shared/icons/icons_folder' %>
              <span >Memo <br>Organization</span>
            </div>
            <div>
              <%= render 'shared/icons/icons_othertext' %>
              <span >Everything <br>else</span>
            </div>
          </div>
        </div>
        <div class="home-top-right">
          <%= render partial: 'shared/iphone_silhouette' %>
          <%= render partial: 'shared/iphone_silhouette' %>
          <%= render partial: 'shared/iphone_silhouette' %>
          <img src="tpmemos-topimage.png" alt="SaceQB App Screenshot 1" />
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Sales Point 1 -->
<section class="column section-spone" id="section-spone">
  <div class="container">
    <div class="home-section-inner">

      <div class="home-section-title-container">
        <div>
          <%= render 'shared/icons/icons_audio' %>
          <h2>Audio Memos</h2>
        </div>
        <p>
        Take your audio memo taking to the next level with TP Audio Memos.<br>
        Unlimited audio notes, with a simple UI for recording and playback.
        </p>
      </div>

      <div class="figure-container">

        <figure class="section-one-left">

          <div class="figure-inner">
            <figcaption>
              <h3>The Full Dale Cooper Experience</h3>
              <p>White vests sold separately.</p>
            </figcaption>
          </div>
          <div class="figure-background">
            <svg class="figure-background-circle" xmlns="http://www.w3.org/2000/svg">
              <circle r="340" cx="350" cy="350" />
            </svg>
            <svg class="figure-background-circle" xmlns="http://www.w3.org/2000/svg">
              <circle r="240" cx="250" cy="250" />
            </svg>
            <svg class="figure-background-circle" xmlns="http://www.w3.org/2000/svg">
              <circle r="140" cx="150" cy="150" />
            </svg>

            <div class="dale-cooper-image-container section-one">
              <img src="dalecooper3-coloradjusted-blurred0.png" />
              <img src="dalecooper3-coloradjusted-blurred1.png" />
              <img src="dalecooper3-coloradjusted-blurred2.png" />
            </div>
          </div>

        </figure>

        <figure class="section-one-right">
          <div class="figure-inner">
            <figcaption>
              <h3>Audio recording, playback and save</h3>
              <p>Create a new memo, make the recording, add a text note, save, and boom, your done. On to the next memo.</p>
            </figcaption>

            <div class="app-demo-outer-container">
              <div class="app-demo-container section-one">
                <div>
                  <%= render partial: 'shared/iphone_silhouette' %>
                  <%= render partial: 'shared/iphone_silhouette' %>
                  <%= render partial: 'shared/iphone_silhouette' %>
                  <img src="/iphone-frame.png" alt="iphone frame for web app demo"/>
                  <video autoplay loop muted >
                    <source src="demovideo1.webm" type="video/webm">
                  </video>
                </div>

              </div>
            </div>

          </div>
        </figure>

      </div>

    </div>
  </div>
</section>

<!-- Sales Point 2 -->
<section class="column section-sptwo" id="section-sptwo">
  <div class="container">
    <div class="home-section-inner">

      <div class="home-section-title-container">
        <div>
          <%= render 'shared/icons/icons_folder' %>
          <h2>Organization</h2>
        </div>
        <p>
        Text input with every memo.<br>
        Easily label your memos, and add them to a bookmark list.
        </p>
      </div>

      <div class="figure-container">

        <figure class="section-two-left">
          <div class="figure-inner">
            <figcaption>
