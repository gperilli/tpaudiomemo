<div class="modal modal--standard" id="destroymemomodal" data-controller="memos">

  <div class="modal-header">
    <button data-action="click->memos#closeDestroyMemoModal">
      <%= render 'shared/icons/icons_x' %>
    </button>
    <h1>Delete Memo?</h1>
  </div>

  <div class="modal-inner">
    <div id="resetmodal-buttons-container">
      <button class="account-grey-button" data-action="click->memos#closeDestroyMemoModal">Cancel</button>
      <button class="account-reset-button" data-action="click->memos#submitMemoDestroy">Delete</button>
    </div>
  </div>

</div>
