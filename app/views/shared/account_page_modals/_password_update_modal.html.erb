<div class="modal modal--standard" id="passwordmodal" data-controller="account">
    <div class="modal-header">
      <button data-action="click->account#closemodal">
        <%= render 'shared/icons/icons_x' %>
      </button>
      <h1>Change Password</h1>
    </div>

    <div class="modal-inner">
      <form
        class="account-forms"
        method="post"
        action="/users"
        data-controller=""
      >
        <div class="field">
          <label for="old_password">Old Password:</label>
          <input type="password" id="old_password" name="user[old_pasword]" required />
        </div>
        <div class="field">
          <label for="new_password">New Password:</label>
          <input type="password" id="new_password" name="user[new_password]" required />
        </div>
        <div class="field">
          <label for="confirm_password">Confirm New Password:</label>
          <input type="password" id="confirm_password" name="user[confirm_password]" required />
        </div>
        <input type="submit" value="Change Password" class="submit-unsubmitted" data-action="click->account#submitPasswordUpdate" />
      </form>
    </div>
  </div>